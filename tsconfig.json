{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@app/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["src/types", "node_modules/@types"]
  }
}
