{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "@app/*": ["src/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src"]
}
